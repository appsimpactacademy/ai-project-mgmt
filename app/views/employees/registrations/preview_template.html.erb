<div class="container">
  <div class="row mb-5">
    <div class="col-md-6">
      <h4>Template Preview</h4>
    </div>
    <div class="col-md-6 text-end">
      <%= link_to 'Back to home', root_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mt-3 mb-3">
        <div class="card-body">
          <div class="alert alert-info" role="alert">
            This is a preview of your selected template. If you confirm, your resume will be styled like this. Click the confirm button to proceed. 
            <strong>To go back and choose another template, click here:</strong> 
            <%= link_to 'Go Back', select_template_path, class: 'alert-link' %>
            <div class="mt-2">
              <%= link_to 'Confirm', get_resume_path(@template), class: 'btn btn-success' %>
            </div>
          </div>
          <%= image_tag @template.template_image, class: 'border w-100' %>
        </div>
      </div>
    </div>
  </div>
</div>
