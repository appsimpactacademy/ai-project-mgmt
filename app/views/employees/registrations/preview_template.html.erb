<div class="row justify-content-center g-0">
  <div class="col-md-8">
    <div class="row mb-5">
      <div class="col-md-6">
        <h4>Template Preview</h4>
      </div>
      <div class="col-md-6 text-end">
        <%= link_to employee_detail_path(current_employee), class: 'btn btn-primary' do %>
          <i class="fa fa-arrow-left me-2"></i>Detail Page
        <% end %>
      </div>
    </div>
    <div class="card mt-3 mb-3">
      <div class="card-body">
        <div class="alert alert-info" role="alert">
          This is a preview of your selected template. If you confirm, your resume will be styled like this. Click the confirm button to proceed. 
          <strong>To go back and choose another template, click here:</strong> 
          <%= link_to 'Go Back', select_template_path, class: 'alert-link' %>
          <div class="mt-2">
            <%= link_to 'Confirm', get_resume_path(@template), class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <%= render partial: "templates/#{@template_identifier}", locals: {employee: @employee} %>
</div>
