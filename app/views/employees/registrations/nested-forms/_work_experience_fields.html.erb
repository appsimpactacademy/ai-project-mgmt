<div class="work-experience mb-3 border p-3 rounded">
  <%= f.hidden_field :_destroy, class: 'hidden-destroy' %>
  <% if f.object.errors[:base].any? %>
    <div class="alert alert-danger">
      <%= f.object.errors[:base].join(', ') %>
    </div>
  <% end %>
  <div class="mb-3">
    <%= f.label :job_title, class: "form-label" %>
    <%= f.text_field :job_title, class: "form-control" %>
    <% if alert && alert['job_title'] && alert['job_title'].any? %>
      <div class="text-danger mt-3">
        <%= alert[:job_title].join(', ') %>
      </div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= f.label :role, class: "form-label" %>
    <%= f.text_field :role, class: "form-control" %>
    <% if f.object.errors[:role].any? %>
      <div class="text-danger mt-3">
        <%= f.object.errors[:role].join(', ') %>
      </div>
    <% end %>
  </div>
  <div class="mb-3">  
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control", maxlength: 150 %>
    <% if f.object.errors[:description].any? %>
      <div class="text-danger mt-3">
        <%= f.object.errors[:description].join(', ') %>
      </div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= f.label :company_name, class: "form-label" %>
    <%= f.text_field :company_name, class: "form-control" %>
    <% if f.object.errors[:company_name].any? %>
      <div class="text-danger mt-3">
        <%= f.object.errors[:company_name].join(', ') %>
      </div>
    <% end %>
  </div>

  <div class="form-group row">
    <div class="col-lg-12 mt-4">
      <div class="form-check form-switch">
        <%= f.check_box :is_currently_working_here, class: 'form-check-input', role: 'switch', data: { action: "change->nested-form#isWorkingChecked", nested_form_target: 'isCurrentlyWorkingCheckbox' } %>
        <label class="form-check-label" for="work_experience_currently_working_here">
          I am currently working here
        </label>
        <% if f.object.errors[:is_currently_working_here].any? %>
          <div class="text-danger mt-3">
            <%= f.object.errors[:is_currently_working_here].join(', ') %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <label class="mb-2 mt-3">
            Start Date: <span class="text-danger mt-3">*</span>
          </label>
          <%= f.date_field :start_date, class: 'form-control', max: Date.today %>
          <% if f.object.errors[:start_date].any? %>
            <div class="text-danger mt-3">
              <%= f.object.errors[:start_date].join(', ') %>
            </div>
          <% end %>
        </div>

        <div class="col-lg-6">
          <label class="mb-2 mt-3">
            End Date: <span class="text-danger mt-3">*</span>
          </label>
          <%= f.date_field :end_date, class: 'form-control', id: 'work_experience_end_date', max: Date.today.to_s, data: { nested_form_target: "endDate" }, disabled: f.object.is_currently_working_here? ? true : false %> 
          <% if f.object.errors[:end_date].any? %>
            <div class="text-danger mt-3">
              <%= f.object.errors[:end_date].join(', ') %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div>
    <%= link_to 'Remove Work Experience', '#', class: 'btn btn-danger btn-sm mt-3', data: { action: 'click->nested-form#removeWork' } %>
  </div>
</div>
