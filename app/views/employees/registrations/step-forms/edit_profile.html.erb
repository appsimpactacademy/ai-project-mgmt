<%= turbo_frame_tag "step_form" do %>
  <div class="container">
    <div class="row mb-5">
      <div class="col-md-6">
        <h4>Complete your profile</h4>
      </div>
      <div class="col-md-6 text-end">
        <%= link_to 'Back to home', root_path, class: 'btn btn-primary', data: { turbo: false } %>
      </div>
    </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name, step: @step), html: { method: :put, data: { controller: "url-update", turbo_frame: "step_form" } }) do |f| %>
      <div class="card mb-4">
        <div class="card-body">
          <h4 class="mb-4">Basic Information</h4>
          <div class="mb-3">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, class: "form-control", autofocus: true %>
            <% if resource.errors[:first_name].any? %>
              <div class="text-danger mt-2">
                <%= resource.errors[:first_name].join(', ') %>
              </div>
            <% end %>
          </div>
          <div class="mb-3">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, class: "form-control" %>
            <% if resource.errors[:last_name].any? %>
              <div class="text-danger mt-2">
                <%= resource.errors[:last_name].join(', ') %>
              </div>
            <% end %>
          </div>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
            <% if resource.errors[:email].any? %>
              <div class="text-danger mt-2">
                <%= resource.errors[:email].join(', ') %>
              </div>
            <% end %>
          </div>
          <div class="mb-3">
            <%= f.label :contact_number, class: "form-label" %>
            <%= f.text_field :contact_number, class: "form-control" %>
            <% if resource.errors[:contact_number].any? %>
              <div class="text-danger mt-2">
                <%= resource.errors[:contact_number].join(', ') %>
              </div>
            <% end %>
          </div>
          <div class="mb-3">
            <%= f.label :job_title, class: "form-label" %>
            <%= f.text_field :job_title, class: "form-control" %>
            <% if resource.errors[:job_title].any? %>
              <div class="text-danger mt-2">
                <%= resource.errors[:job_title].join(', ') %>
              </div>
            <% end %>
          </div>
          <div class="mb-3">
            <%= f.label :profile_image, class: "form-label" %>
            <%= f.file_field :profile_image, class: "form-control" %>
            <% if resource.errors[:profile_image].any? %>
              <div class="text-danger mt-2">
                <%= resource.errors[:profile_image].join(', ') %>
              </div>
            <% end %>
          </div>
          <div class="mb-3">
            <%= f.label :about, class: "form-label" %>
            <%= f.text_area :about, class: "form-control", rows: 10 %>
            <% if resource.errors[:about].any? %>
              <div class="text-danger mt-2">
                <%= resource.errors[:about].join(', ') %>
              </div>
            <% end %>
          </div>
          <%= f.submit "Next", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
