<div class="work-experience mb-3">
  <%= f.hidden_field :_destroy, class: 'hidden-destroy' %>

  <%= f.label :job_title, class: "form-label" %>
  <%= f.text_field :job_title, class: "form-control" %>

  <%= f.label :role, class: "form-label" %>
  <%= f.text_field :role, class: "form-control" %>

  <%= f.label :description, class: "form-label" %>
  <%= f.text_area :description, class: "form-control", maxlength: 150 %>

  <%= f.label :company_name, class: "form-label" %>
  <%= f.text_field :company_name, class: "form-control" %>

  <%= f.label :start_date, class: "form-label" %>
  <%= f.date_field :start_date, class: "form-control" %>

  <%= f.label :end_date, class: "form-label" %>
  <%= f.date_field :end_date, class: "form-control", include_blank: true %>

  <%= f.label :is_currently_working_here, class: "form-label" %>
  <%= f.check_box :is_currently_working_here %>

  <div>
    <a href="#" data-action="nested-form#removeWork" class="btn btn-danger">Remove</a>
  </div>
</div>
