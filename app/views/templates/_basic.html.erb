<html>
 <head>
  <title>
   Resume
  </title>
  <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet"/>
  <style>
   body {
            font-family: 'Roboto', sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }
       .container {
            max-width: 900px;
            margin: 20px auto;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: none;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
        .header img {
            border-radius: 50%;
            width: 100px;
            height: 100px;
        }
        .header h1 {
            font-size: 24px;
            font-weight: 700;
            margin: 10px 0 5px;
        }
        .header h2 {
            font-size: 18px;
            font-weight: 400;
            color: gray;
            margin-bottom: 10px;
        }
        .header p {
            font-size: 14px;
            color: gray;
        }
        .section-title {
            font-size: 18px;
            font-weight: 700;
            border-bottom: 1px solid #000;
            margin-top: 20px;
            margin-bottom: 10px;
        }
        .section-content {
            margin-bottom: 20px;
        }
        .experience-item, .education-item, .open-source-item {
            margin-bottom: 10px;
        }
        .experience-item h3, .education-item h3, .open-source-item h3 {
            font-size: 16px;
            font-weight: 700;
            margin: 0;
        }
        .experience-item h4, .education-item h4, .open-source-item h4 {
            font-size: 14px;
            font-weight: 400;
            color: gray;
            margin: 0;
        }
        .experience-item p, .open-source-item p {
            font-size: 14px;
            margin: 5px 0;
        }
        .skills-list {
            list-style: none;
            padding: 0;
        }
        .skills-list li {
            display: inline;
            margin-right: 10px;
            font-size: 14px;
        }
        .social-link a {
          text-decoration: none;
        }
  </style>
 </head>
 <body>
   <div class="header">
    <% if @employee.profile_image.attached? %>
      <%= image_tag @employee.profile_image, height: 100, width: 100 %>
    <% else %>
      <%= image_tag 'unnamed.jpg', height: 100, width: 100 %>
    <% end %>
    <h1>
      <%= @employee&.full_name %>
    </h1>
    <h2>
      <%= @employee.job_title %>
    </h2>
    <p>
      <%= @employee.contact_number %> â€¢ <%= @employee.email %>
    </p>
  </div>

  <!-- Summary Section -->
  <% if @employee.about.present? %>
    <div class="section">
      <div class="section-title">Summary</div>
      <div class="section-content">
        <p>
          <%= @employee.about %>
        </p>
      </div>
    </div>
  <% end %>  

  <!-- Experience Section -->
  <% if @employee.work_experiences.any? %>
    <div class="section">
      <div class="section-title">Experience</div>
      <div class="section-content">
          <% @employee.work_experiences.each do |work_experience| %>
            <div class="experience-item">
              <h3><%= work_experience.job_title || 'Job title not available' %></h3>
              <h4><%= work_experience.role || 'Role not available' %></h4>
              <h4><%= work_experience.job_duration || 'Duration not available' %></h4>
              <p><%= work_experience.description || 'Description not available' %></p>
            </div>
          <% end %>
      </div>
    </div>
  <% end %>

  <!-- Education Section -->
  <% if @employee.education_records.any? %>
    <div class="section">
      <div class="section-title">Education</div>
      <div class="section-content">
          <% @employee.education_records.each do |education_record| %>
            <div class="education-item">
              <h3><%= education_record.college_or_university || 'Institution not available' %></h3>
              <h4><%= education_record.course_name || 'Course name not available' %></h4>
              <h4><%= education_record.start_year || 'Start year not available' %> - <%= education_record.end_year || 'Present' %></h4>
            </div>
          <% end %>
      </div>
    </div>
  <% end %>

  <!-- Skills Section -->
  <% if @employee.skills.any? %>
    <div class="section">
      <div class="section-title">Skills</div>
      <div class="section-content">
          <ul class="skills-list">
            <% @employee.skills.each do |skill| %>
              <li><%= skill.name || 'Skill not available' %></li>
            <% end %>
          </ul>
      </div>
    </div>
  <% end %>

  <!-- Projects Section -->
  <% if @employee.projects.any? %>
    <div class="section">
      <div class="section-title">Projects</div>
      <div class="section-content">
          <% @employee.projects.each do |project| %>
            <div class="open-source-item">
              <h3><%= project.title || 'Project title not available' %></h3>
              <h4><%= project.start_date&.strftime("%b %Y") || 'Start date not available' %> - <%= project.end_date.present? ? project.end_date.strftime("%b %Y") : 'Pending' %></h4>
              <h4><%= project.end_date.present? ? 'Completed' : 'Currently Working' %></h4>
            </div>
          <% end %>
      </div>
    </div>
  <% end %>

  <!-- Interest Section -->
  <% if @employee.hobbies.any? %>
    <div class="section">
      <div class="section-title">Interest</div>
      <div class="section-content">
        <%= @employee.hobbies.any? ? @employee.hobbies.map(&:name).join(', ') : 'No interests available' %>
      </div>
    </div>
  <% end %>

  <% if @employee.social_network&.attributes.except("id", "employee_id", "created_at", "updated_at").values.any?(&:present?) %>
    <div class="section">
      <div class="section-title">Social Networks</div>
      <div class="section-content social-link">
        <% if @employee.social_network %>
          <ul>
            <% if @employee.social_network.linkedin_url.present? %>
              <li>
                <%= link_to "#{@employee.social_network.linkedin_url}", @employee.social_network.linkedin_url, target: '_blank', rel: 'noopener', class: "text-danger" %>
              </li>
            <% end %>
            
            <% if @employee.social_network.github_url.present? %>
              <li>
                <%= link_to 'GitHub', @employee.social_network.github_url, target: '_blank', rel: 'noopener', class: "text-danger" %>
              </li>
            <% end %>

            <% if @employee.social_network.stackoverflow_url.present? %>
              <li>
                <%= link_to 'Stack Overflow', @employee.social_network.stackoverflow_url, target: '_blank', rel: 'noopener', class: "text-danger" %>
              </li>
            <% end %>

            <% if @employee.social_network.twitter_url.present? %>
             danger
                <%= link_to 'Twitter', @employee.social_network.twitter_url, target: '_blank', rel: 'noopener', class: "text-danger" %>
              </li>
            <% end %>

            <% if @employee.social_network.youtube_url.present? %>
              <li>
                <%= link_to 'YouTube', @employee.social_network.youtube_url, target: '_blank', rel: 'noopener', class: "text-danger" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p>No social networks available.</p>
        <% end %>
      </div>
    </div>
  <% end %>

 </body>
</html>
