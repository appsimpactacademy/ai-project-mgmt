<html>
  <head>
    <title>
      Loraine Hudson - Resume
    </title>
     <link crossorigin="anonymous" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" rel="stylesheet"/>
     <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
     <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet"/>
    <style>
       body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f4f4;
        color: #333;
      }
      .container {
        max-width: 900px;
        margin: 20px auto;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: none;
      }
      .profile-pic {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
      }
      .section-title {
        font-size: 18px;
        color: #007bff;
        margin-top: 5px;
        margin-bottom: 10px;
        display: flex;
        font-weight: bold;
        align-items: center;
        color: #000;
      }
      .diamond {
        width: 25px;
        height: 25px;
        background-color: white;
        border: 2px solid #35658d;
        transform: rotate(42deg);
        margin: 12px 12px 12px 0px;
        position: relative;
        border-radius: 5px;
      }
      .inner-diamond {
        width: 10px;
        height: 10px;
        background-color: #35658d;
        position: absolute;
        top: 68%;
        left: 56%;
        border-radius: 2px;
        transform: translate(-64%, -81%) rotate(0deg);
      }
      <%# .heading {
        font-size: 24px;
        font-weight: bold;
        margin-left: 20px;
      } %>
      .icon-heading-container {
        display: flex;
        align-items: center;
        margin-bottom: 5%;
      }
      .contact-info i {
        color: #007bff;
        margin-right: 10px;
      }
      .skills, .languages, .certificates, .honor-awards, .interests {
        margin-bottom: 20px;
      }
      .skills .badge {
        display: block;
        background-color: #94b4c4;
        color: #fff;
        text-align: left;
        padding: 10px;
        margin-bottom: 5px;
        border-radius: 5px;
        font-size: 14px;
        width: fit-content ;
      }
      .work-experience, .education {
        margin-bottom: 20px;
      }
      .work-experience h5, .education h5 {
        font-weight: bold;
        margin-bottom: 5px;
      }
      .work-experience p, .education p {
        margin-bottom: 5px;
      }
      .work-experience .date-location, .education .date-location {
        color: #999;
        font-size: 0.9rem;
      }
      .work-experience ul, .education ul {
        padding-left: 20px;
      }
      .work-experience ul li, .education ul li {
        margin-bottom: 5px;
      }
      .divider {
        position: relative;
        height: 100%;
        width: 2px;
        background-color: lightgray;
        margin: 0 auto;
      }
      .divider::before, .divider::after {
        content: '';
        position: absolute;
        left: 50%;
        transform: translateX(-50%) rotate(45deg);
        width: 10px;
        height: 10px;
        background-color: lightgray;
      }
      .divider::before {
        top: -5px;
      }
      .divider::after {
        bottom: -5px;
      }
      .hobby-icon {
        color: #4e7899;
        margin-right: 5px;
      }
      .social-network a {
        text-decoration: none;
      }
      .social-network p {
        word-break: break-word;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="text-center">
            <% if @employee.profile_image.attached? %>
              <%= image_tag @employee.profile_image, height: 100, width: 100, class: 'profile-pic' %>
            <% else %>
              <%= image_tag 'unnamed.jpg', height: 100, width: 100, class: 'profile-pic' %>
            <% end %>
          </div>
          <% if @employee.skills.present? %>
            <div class="skills mt-5">
              <div class="icon-heading-container">
                <div class="diamond">
                  <div class="inner-diamond"></div>
                </div>
                <h3 class="section-title">SKILLS</h3>
              </div>
              <% @employee.skills.each do |skill| %>
                <span class="badge">
                 <%= skill.name %>
               </span>
               <% end %>
            </div>
          <% end %>  
          <% if @employee.hobbies.present? %>
            <div class="interests">
              <div class="icon-heading-container">
                <div class="diamond">
                  <div class="inner-diamond"></div>
                </div>
                <h3 class="section-title">INTERESTS</h3>
              </div>
              <% @employee.hobbies.each do |hobby| %>
                <p>
                  <i class="fas fa-heart hobby-icon">
                  </i>
                  <%= hobby.name %>
                </p>
              <% end %>
            </div>
          <% end %>
          <% if @employee.social_network&.attributes.except("id", "employee_id", "created_at", "updated_at").values.any?(&:present?) %>
            <div class="social-network">
              <div class="icon-heading-container">
                <div class="diamond">
                  <div class="inner-diamond"></div>
                </div>
                <h3 class="section-title">Social Networks</h3>
              </div>
              <% if @employee.social_network %>
                <% if @employee.social_network.linkedin_url.present? %>
                  <p>
                    <%= link_to "#{@employee.social_network.linkedin_url}", @employee.social_network.linkedin_url, target: '_blank', rel: 'noopener', class: "text-danger" %>
                  </p>
                <% end %>
                
                <% if @employee.social_network.github_url.present? %>
                  <p>
                    <%= link_to 'GitHub', @employee.social_network.github_url, target: '_blank', rel: 'noopener', class: "text-danger" %>
                  </p>
                <% end %>

                <% if @employee.social_network.stackoverflow_url.present? %>
                  <p>
                    <%= link_to 'Stack Overflow', @employee.social_network.stackoverflow_url, target: '_blank', rel: 'noopener', class: "text-danger" %>
                  </p>
                <% end %>

                <% if @employee.social_network.twitter_url.present? %>
                  <p>
                    <%= link_to 'Twitter', @employee.social_network.twitter_url, target: '_blank', rel: 'noopener', class: "text-danger" %>
                  </p>
                <% end %>

                <% if @employee.social_network.youtube_url.present? %>
                  <p>
                    <%= link_to 'YouTube', @employee.social_network.youtube_url, target: '_blank', rel: 'noopener', class: "text-danger" %>
                  </p>
                <% end %>
              <% else %>
                <p>No social networks available.</p>
              <% end %>
            </div>
          </div>
        <% end %>  
        <div class="col-md-1">
          <div class="divider">
          </div>
        </div>
        <div class="col-md-8">
          <h1>
            <%= @employee.full_name %>
          </h1>
          <h2 class="text-danger">
            <%= @employee.job_title %>
          </h2>
          <% if @employee.about.present? %>
            <p>
              <%= @employee.about %>
            </p>
          <% end %>  
          <div class="contact-info">
            <div class="row">
              <div class="col-md-6">
                <p>
                  <i class="fas fa-envelope">
                  </i>
                  <%= @employee.email %>
                </p>
              </div>
              <div class="col-md-6">
                <p>
                  <i class="fas fa-phone">
                  </i>
                  <%= @employee.contact_number %>
                </p>  
              </div>
            </div>
          </div>
          <% if @employee.work_experiences.present? %>
            <div class="work-experience mt-4 mb-0">
              <div class="icon-heading-container mb-3">
                <div class="diamond">
                  <div class="inner-diamond"></div>
                </div>
                <h3 class="section-title">WORK EXPERIENCE</h3>
              </div>
              <% @employee.work_experiences.each do |work_experience| %>
                <div>
                  <h5>
                    <%= work_experience.job_title %>
                  </h5>
                  <p>
                    <%= work_experience.role %>
                  </p>
                  <div class="row">
                    <div class="col-md-6">
                      <p class="date-location text-danger">
                        <%= work_experience.job_duration %>
                      </p>
                    </div>
                    <div class="col-md-6">
                      <p class="date-location text-danger text-end">
                        <%= work_experience.company_name %>
                      </p>
                    </div>
                  </div>
                  <ul class="mt-4">
                    <li>
                      <%= work_experience.description %>
                    </li>
                  </ul>
                </div>
              <% end %>
            </div>
          <% end %>
          <% if @employee.education_records.present? %>
            <div class="education">
              <div class="icon-heading-container">
                <div class="diamond">
                  <div class="inner-diamond"></div>
                </div>
                <h3 class="section-title">EDUCATION</h3>
              </div>
              <% @employee.education_records.each do |education_record| %>
                <div>
                  <h5>
                    <%= education_record.course_name %>
                  </h5>
                  <p>
                    <%= education_record.college_or_university %>
                  </p>
                  <p class="date-location">
                    <%= education_record.start_year %> - <%= education_record.end_year || 'Present' %>
                  </p>
                </div>
              <% end %>
            </div>
          <% end %>  
        </div>
      </div>
    </div>
  </body>
</html>
