<%= form_with(model: [:admin, @project]) do |form| %>
  <div class="modal-body">
    <div class="row">
      <% if @project.errors.any? %>
        <div class="error-area" style="color:red;">
          <h3><%= pluralize(@project.errors.count, 'error') %> prohibited your project from being saved.</h3>
          <ul>
            <% @project.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-lg-12">
        <div class="form-group">
          <label class="mb-2 mt-3">
            Title
            <span class="text-danger">*</span>
          </label>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <label class="mb-2 mt-3">
            Client Company
            <span class="text-danger">*</span>
          </label>
          <%= form.text_field :client_company, class: "form-control" %>
        </div>

        <div class="form-group">
          <label class="mb-2 mt-3">
            Client
            <span class="text-danger">*</span>
          </label>
          <%= form.text_field :client_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <label class="mb-2 mt-3">
            Status
            <span class="text-danger">*</span>
          </label>
          <%= form.select :status, options_for_select(Project::STATUS, selected: form.object.status), {prompt: 'Select Project Status'}, { class: "form-select" } %>
        </div>

        <div class="form-group row">
          <div class="col-lg-6">
            <label class="mb-2 mt-3">
              Start Date
              <span class="text-danger">*</span>
            </label>
            <%= form.date_field :start_date, class: "form-control" %>
          </div>
          <div class="col-lg-6">
            <label class="mb-2 mt-3">
              End Date
            </label>
            <%= form.date_field :end_date, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <%= form.submit 'Save Changes', class: 'btn btn-primary', data: { action: 'click->bs-modal#submitEnd' } %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>
