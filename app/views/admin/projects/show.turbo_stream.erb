<%= turbo_stream.replace "remote_modal" do %>
  <%= turbo_frame_tag :remote_modal, target: :_top do %>
    <div class="modal fade" id="bsTurboModal" tabindex="-1" aria-labelledby="bsTurboModalLabel" aria-hidden="true" data-controller="bs-modal">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="bsTurboModalLabel">Project Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p class="lead"><strong>Title: </strong><%= @project.title %></p>
            <p class="lead"><strong>Client: </strong><%= @project.client_name %></p>
            <p class="lead"><strong>Client Company: </strong><%= @project.client_company %></p>
            <p class="lead"><strong>Status: </strong><%= @project.status %></p>
            <p class="lead"><strong>Start Date: </strong><%= @project.start_date %></p>
            <% if @project.end_date.present? %>
              <p class="lead"><strong>End Date: </strong><%= @project.end_date %></p>
            <% end %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
