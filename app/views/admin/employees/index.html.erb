<%= link_to "New Employee", new_admin_employee_path, class: "btn btn-primary mb-3", data: { controller: "bs-modal-form" } %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody id="employee-list">
    <% @employees.each do |employee| %>
      <%= render "admin/employees/employee", employee: employee %>
    <% end %>
  </tbody>
</table>
