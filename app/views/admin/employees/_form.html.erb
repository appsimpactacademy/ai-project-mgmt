<%= form_with(model: [:admin, @employee]) do |form| %>
  <div class="modal-body">
    <div class="row">
      <% if @employee.errors.any? %>
        <div class="error-area" style="color:red;">
          <h3><%= pluralize(@employee.errors.count, 'error') %> prohibited your employee from being saved.</h3>
          <ul>
            <% @employee.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-lg-12">
        <div class="form-group">
          <label class="mb-2 mt-3">
            Title
            <span class="text-danger">*</span>
          </label>
          <%= form.text_field :job_title, class: "form-control" %>
        </div>
        
        <div class="form-group row">
          <div class="col-lg-6">
            <label class="mb-2 mt-3">
              First Name
              <span class="text-danger">*</span>
            </label>
            <%= form.text_field :first_name, class: "form-control" %>
          </div>
          <div class="col-lg-6">
            <label class="mb-2 mt-3">
              Last Name
            </label>
            <%= form.text_field :last_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-6">
            <label class="mb-2 mt-3">
              Email
              <span class="text-danger">*</span>
            </label>
            <%= form.email_field :email, class: "form-control" %>
          </div>
          <div class="col-lg-6">
            <label class="mb-2 mt-3">
              Contact Number
            </label>
            <%= form.text_field :contact_number, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <%= form.submit 'Save Changes', class: 'btn btn-primary', data: { action: 'click->bs-modal#submitEnd' } %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>
