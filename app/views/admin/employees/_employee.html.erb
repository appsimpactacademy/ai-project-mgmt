<tr id="employee-item-<%= employee.id %>">
  <td><%= employee.full_name %></td>
  <td><%= employee.email %></td>
  <td>
    <%= link_to 'Show', admin_employee_path(employee), class: 'btn btn-info', data: { controller: "bs-modal-form" } %>
    <%= link_to 'Edit', edit_admin_employee_path(employee), class: 'btn btn-warning', data: { controller: "bs-modal-form" } %>
    <%= link_to 'Delete', admin_employee_path(employee), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this employee? This action can not be undo.' } %>
  </td>
</tr>
