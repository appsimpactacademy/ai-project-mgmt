<tr id="employee-project-item-<%= employee_project.id %>">
  <td><%= employee_project.employee.full_name %></td>
  <td><%= employee_project.project.title %></td>
  <td>
    <%= link_to 'Show', admin_employee_project_path(employee_project), class: 'btn btn-info', data: { controller: "bs-modal-form" } %>
    <%= link_to 'Edit', edit_admin_employee_project_path(employee_project), class: 'btn btn-warning', data: { controller: "bs-modal-form" } %>
    <%= link_to 'Delete', admin_employee_project_path(employee_project), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this employee project? This action can not be undo.' } %>
  </td>
</tr>
