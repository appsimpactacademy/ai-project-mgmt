<% content_for :title, 'AiProjectMgmt | Employee Tasks' %>
<div class="row mt-3">
  <div class="d-flex align-items-center">
    <div class="mb-3">
      <%= render 'task_filters', q: @q %>
    </div>  
  </div>
  <div class="text-end">
    <%= link_to "New Task", new_employee_task_path, class: "btn btn-primary mb-3", data: { controller: "bs-modal-form" } %>
  </div>
</div>

<% if @tasks.present? %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Project</th>
        <th>Title</th>
        <th>Number</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody id="task-list">
      <% @tasks.each do |task| %>
        <%= render "employee/tasks/task", task: task %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="card">
    <div class="card-body">
      <h4>No tasks found for the selected project.</h4>
    </div>
  </div>
<% end %>
