<%= form_with(model: [:employee, @task]) do |form| %>
  <div class="modal-body">
    <div class="row">
      <% if @task.errors.any? %>
        <div class="error-area" style="color:red;">
          <h3><%= pluralize(@task.errors.count, 'error') %> prohibited your employee from being saved.</h3>
          <ul>
            <% @task.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-lg-12">
        <div class="form-group">
          <label class="mb-2 mt-3">
            Project
            <span class="text-danger">*</span>
          </label>
          <%= form.select :project_id, options_for_select(@projects.map {|project| [project.title, project.id]}, selected: form.object.project_id), { prompt: 'Select a project' }, { class: "form-select" } %>
        </div>

        <div class="form-group">
          <label class="mb-2 mt-3">
            Number
            <span class="text-danger">*</span>
          </label>
          <%= form.text_field :number, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <label class="mb-2 mt-3">
            Title
            <span class="text-danger">*</span>
          </label>
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <%= form.submit 'Save Changes', class: 'btn btn-primary', data: { action: 'click->bs-modal#submitEnd' } %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>
