<tr id="task-item-<%= task.id %>">
  <td><%= task.project.title %></td>
  <td><%= task.title %></td>
  <td><%= task.number %></td>
  <td>
    <%= link_to 'Show', employee_task_path(task), class: 'btn btn-info', data: { controller: "bs-modal-form" } %>
    <%= link_to 'Edit', edit_employee_task_path(task), class: 'btn btn-warning', data: { controller: "bs-modal-form" } %>
    <%= link_to 'Delete', employee_task_path(task), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this task? This action can not be undo.' } %>
  </td>
</tr>
