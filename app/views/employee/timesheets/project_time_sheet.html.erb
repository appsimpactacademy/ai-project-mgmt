<% content_for :title, "AIProjectMgmt | Timesheet for #{@project.title}" %>
<div class="row">
  <h2 class="mb-3 mt-3"><%= @project.title %> Timesheet</h2>
  <% @card_items.each do |key, value| %>
    <%= render 'employee/timesheets/project_cards', card_title: key, card_details: value %>
  <% end %>
  
  <div class="col-lg-12 mt-4">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Hours</th>
          <th>Task</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @all_time_logs.each do |time_log| %>
          <tr>
            <td><%= time_log.log_date.strftime('%d %B, %Y') %></td>
            <td><%= time_log.time_in_hours %></td>
            <td><%= time_log.task.title %></td>
            <td><%= time_log.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
